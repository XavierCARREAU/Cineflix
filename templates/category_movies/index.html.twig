{% extends 'base.html.twig' %}

{% block title %}Categorie filmes{% endblock %}

{% block stylesheets %}
  <style>
    .herobanner {
        background-color: #4d4d4d;
        background-size: cover;
        background-position: center;
        height: 60vh;
        width: 100%;
    }
    
    .herobanner h1{
        font-size: 48px;
        font-weight: bold;
        padding-top: 25vh;
    }

    .herobanner h2 {
        font-size: 32px;
        font-weight: bold;
        
    }   

  </style>
{% endblock %}

{% block body %}
    <section class="container-fluid">
        <div class="herobanner">
            <h1 class="text-center text-white">Categorie filmes</h1>
        </div>
    </section>
	<section class="container my-5">
		<div class="row">
            <div class="row row-cols-1 row-cols-md-4 g-4">
                {% for movie in movies %}
                <div class="col">
                    <a href="/fiche/{{ movie.id }}" class="card">
                    <img src="{{ asset("upload/images/poster/" ~ movie.poster) }}" class="card-img-top" alt="{{ movie.title }}">
                    <div class="card-body">
                        <h5 class="card-title">{{ movie.title }}</h5>
                        <p class="card-text">{{ movie.description }}</p>
                    </div>
                    </a>
                </div>
                {% endfor %}
            </div>
		</div>
	</section>
{% endblock %}
